{% extends 'base.html.twig' %}

{% block title %}Administrator index{% endblock %}

{% block body %}
    <h1>Administrator index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Last_name</th>
                <th>Email</th>
                <th>Login</th>
                <th>Mdp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for administrator in administrators %}
            <tr>
                <td>{{ administrator.id }}</td>
                <td>{{ administrator.name }}</td>
                <td>{{ administrator.lastName }}</td>
                <td>{{ administrator.email }}</td>
                <td>{{ administrator.login }}</td>
                <td>{{ administrator.mdp }}</td>
                <td>
                    <a href="{{ path('app_administrator_show', {'id': administrator.id}) }}">show</a>
                    <a href="{{ path('app_administrator_edit', {'id': administrator.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_administrator_new') }}">Create new</a>
{% endblock %}
